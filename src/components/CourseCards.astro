---
interface Course {
  title: string;
  code?: string;
  institution: string;
  semester: string;
  grade?: string;
  description?: string;
  topics?: string[];
  category?: string;
}

export interface Props {
  title?: string;
  courses: Course[];
}

const { title = "Relevant Courses", courses } = Astro.props;

// Extract unique institutions and categories
const institutions = ["All", ...new Set(courses.map((c) => c.institution))];
const categories = [
  "All",
  ...new Set(courses.map((c) => c.category).filter(Boolean)),
];
---

<section class="courses-section">
  <h2 class="courses-title">{title}</h2>

  <div class="courses-filters">
    <div class="courses-filters__group" data-filter-group="institution">
      <span class="courses-filters__label">Institution</span>
      {
        institutions.map((inst, idx) => (
          <button
            type="button"
            class={`chip ${idx === 0 ? "is-active" : ""}`}
            data-filter={inst}
            aria-pressed={idx === 0 ? "true" : "false"}
          >
            {inst}
          </button>
        ))
      }
    </div>

    <div class="courses-filters__group" data-filter-group="category">
      <span class="courses-filters__label">Subject</span>
      {
        categories.map((cat, idx) => (
          <button
            type="button"
            class={`chip ${idx === 0 ? "is-active" : ""}`}
            data-filter={cat}
            aria-pressed={idx === 0 ? "true" : "false"}
          >
            {cat}
          </button>
        ))
      }
    </div>
  </div>

  <div class="courses-scroll-container">
    <div class="courses-grid">
      {
        courses.map((course) => (
          <article
            class="course-card"
            data-course-card
            data-institution={course.institution}
            data-category={course.category || ""}
          >
            <div class="course-card__header">
              <h3>{course.title}</h3>
              {course.code && (
                <span class="course-card__code">{course.code}</span>
              )}
            </div>

            <p class="course-card__institution">{course.institution}</p>

            <div class="course-card__meta">
              <span class="course-badge">{course.semester}</span>
              {course.grade && (
                <span class="course-badge course-badge--grade">
                  Grade: {course.grade}
                </span>
              )}
            </div>

            {course.description && (
              <p class="course-card__description">{course.description}</p>
            )}

            {course.topics && course.topics.length > 0 && (
              <div class="course-card__topics">
                <strong>Topics:</strong>
                <ul>
                  {course.topics.map((topic) => (
                    <li>{topic}</li>
                  ))}
                </ul>
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sections = document.querySelectorAll(".courses-section");

    sections.forEach((section) => {
      if (!(section instanceof HTMLElement)) return;

      const cards = Array.from(section.querySelectorAll("[data-course-card]"));
      const filterGroups = Array.from(
        section.querySelectorAll("[data-filter-group]")
      );

      const state: Record<string, string> = {
        institution: "All",
        category: "All",
      };

      const applyFilters = () => {
        cards.forEach((card) => {
          if (!(card instanceof HTMLElement)) return;

          const institution = card.dataset.institution || "";
          const category = card.dataset.category || "";

          let match = true;
          if (
            state.institution !== "All" &&
            state.institution !== institution
          ) {
            match = false;
          }
          if (state.category !== "All" && state.category !== category) {
            match = false;
          }

          card.style.display = match ? "" : "none";
        });
      };

      filterGroups.forEach((group) => {
        if (!(group instanceof HTMLElement)) return;
        const groupKey = group.dataset.filterGroup;
        if (!groupKey) return;

        const buttons = Array.from(
          group.querySelectorAll("button[data-filter]")
        );

        buttons.forEach((button) => {
          button.addEventListener("click", () => {
            if (!(button instanceof HTMLElement)) return;
            const value = button.dataset.filter || "All";
            state[groupKey] = value;

            buttons.forEach((btn) => {
              const isActive = btn === button;
              btn.classList.toggle("is-active", isActive);
              btn.setAttribute("aria-pressed", String(isActive));
            });

            applyFilters();
          });
        });
      });
    });
  });
</script>

<style>
  .courses-section {
    margin: 3rem 0;
  }

  .courses-title {
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
  }

  .courses-filters {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .courses-filters__group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .courses-filters__label {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--muted-text);
    margin-right: 0.5rem;
    font-weight: 600;
  }

  .courses-scroll-container {
    overflow-x: auto;
    overflow-y: visible;
    padding: 0.5rem 0 1rem 0;
    margin: 0 -1rem;
    padding-left: 1rem;
    padding-right: 1rem;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--accent) var(--surface);
  }

  .courses-scroll-container::-webkit-scrollbar {
    height: 8px;
  }

  .courses-scroll-container::-webkit-scrollbar-track {
    background: var(--surface);
    border-radius: 4px;
  }

  .courses-scroll-container::-webkit-scrollbar-thumb {
    background: var(--accent);
    border-radius: 4px;
  }

  .courses-scroll-container::-webkit-scrollbar-thumb:hover {
    background: var(--accent-soft);
  }

  .courses-grid {
    display: flex;
    gap: 1.5rem;
    width: fit-content;
    min-width: 100%;
  }

  .course-card {
    flex: 0 0 320px;
    border: 2px solid var(--accent);
    padding: 1.5rem;
    background: var(--card-bg);
    transition: all 0.2s ease;
    min-height: 250px;
    display: flex;
    flex-direction: column;
  }

  .course-card:hover {
    border-color: var(--accent-soft);
    box-shadow: 0 0 20px var(--glow-soft);
    transform: translateY(-2px);
  }

  .course-card__header {
    margin-bottom: 0.75rem;
  }

  .course-card__header h3 {
    margin: 0 0 0.5rem 0;
    color: var(--accent);
    font-size: 1.15rem;
    line-height: 1.3;
  }

  .course-card__code {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--muted-text);
    font-family: monospace;
    background: var(--surface);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
  }

  .course-card__institution {
    margin: 0 0 0.75rem 0;
    font-size: 0.95rem;
    color: var(--foreground);
  }

  .course-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .course-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.85rem;
    background: color-mix(in srgb, var(--accent) 15%, transparent);
    border: 1px solid var(--accent);
    color: var(--accent);
    border-radius: 3px;
  }

  .course-badge--grade {
    background: color-mix(in srgb, var(--accent-soft) 20%, transparent);
    border-color: var(--accent-soft);
  }

  .course-card__description {
    margin: 0.75rem 0;
    font-size: 0.95rem;
    line-height: 1.5;
    flex: 1;
  }

  .course-card__topics {
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border-color);
    font-size: 0.9rem;
  }

  .course-card__topics strong {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--accent);
  }

  .course-card__topics ul {
    margin: 0;
    padding-left: 1.25rem;
    list-style: disc;
  }

  .course-card__topics li {
    margin-bottom: 0.25rem;
    line-height: 1.4;
  }

  @media (max-width: 684px) {
    .course-card {
      flex: 0 0 280px;
    }

    .courses-scroll-container {
      margin: 0 -0.5rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
</style>
