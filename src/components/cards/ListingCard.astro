---
import FormattedDate from "../FormattedDate.astro";
import { slugifyTag } from "../../lib/tags";
import { isExternalUrl, toSitePath } from "../../lib/site";

export interface ActionLink {
  label: string;
  href: string;
  external?: boolean;
}

type MetaEntry =
  | string
  | number
  | { kind: "date"; value: Date }
  | { kind: "text"; value: string };

export interface Props {
  title: string;
  href: string;
  external?: boolean;
  summary?: string;
  meta?: MetaEntry[];
  tags?: string[];
  actions?: ActionLink[];
  ctaLabel?: string;
}

const {
  title,
  href,
  external = false,
  summary,
  meta = [],
  tags = [],
  actions = [],
  ctaLabel = "View details →",
} = Astro.props as Props;

const normalizedHref = toSitePath(href);
const primaryIsExternal = external || isExternalUrl(href);
---

<article class="listing-card">
  <header class="listing-card__header">
    <h3 class="listing-card__title">
      <a
        href={normalizedHref}
        target={primaryIsExternal ? "_blank" : undefined}
        rel={primaryIsExternal ? "noopener" : undefined}
      >
        {title}
      </a>
    </h3>

    {
      meta.length > 0 && (
        <div class="listing-card__meta">
          {meta.map((item) => (
            <span class="listing-card__meta-item">
              {typeof item === "string" || typeof item === "number" ? (
                item
              ) : item.kind === "date" ? (
                <FormattedDate date={item.value} />
              ) : (
                item.value
              )}
            </span>
          ))}
        </div>
      )
    }
  </header>

  {
    tags.length > 0 && (
      <div class="listing-card__tags">
        <b>Tags:</b>{" "}
        {tags.map((tag, index) => {
          const slug = slugifyTag(tag);
          const tagHref = toSitePath(`tags/${slug}/`);
          return (
            <span class="listing-card__tag">
              <a href={tagHref}>{tag}</a>
              {index < tags.length - 1 && (
                <span aria-hidden="true" class="listing-card__tag-separator">
                  {" • "}
                </span>
              )}
            </span>
          );
        })}
      </div>
    )
  }

  {
    summary && (
      <p class="listing-card__summary">
        <b>Summary:</b> {summary}
      </p>
    )
  }

  <footer class="listing-card__footer">
    <a
      href={normalizedHref}
      class="listing-card__cta"
      target={primaryIsExternal ? "_blank" : undefined}
      rel={primaryIsExternal ? "noopener" : undefined}
    >
      {ctaLabel}
    </a>
    {
      actions.length > 0 && (
        <span class="listing-card__links">
          {actions.map((link, index) => (
            <>
              <a
                href={toSitePath(link.href)}
                target={
                  link.external || isExternalUrl(link.href) ? "_blank" : undefined
                }
                rel={
                  link.external || isExternalUrl(link.href) ? "noopener" : undefined
                }
              >
                {link.label}
              </a>
              {index < actions.length - 1 && (
                <span class="listing-card__divider">·</span>
              )}
            </>
          ))}
        </span>
      )
    }
  </footer>
</article>
