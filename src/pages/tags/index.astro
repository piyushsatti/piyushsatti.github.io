---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllTags } from "../../lib/tags";
import { toSitePath } from "../../lib/site";

const tags = await getAllTags();
---

<BaseLayout
  title="Browse by Tag"
  description="Browse projects, research, and posts grouped by skills and technologies."
>
  <section class="terms">
    <h1>Browse by Tag</h1>
    {
      tags.length === 0 ? (
        <p>No tagged content yet. Check back soon!</p>
      ) : (
        <ul class="terms__list">
          {tags.map((tag) => (
            <li class="terms__item">
              <a href={toSitePath(`tags/${tag.slug}/`)}>{tag.label}</a>
              <span class="count">
                {tag.count} item{tag.count === 1 ? "" : "s"}
              </span>
            </li>
          ))}
        </ul>
      )
    }
  </section>
</BaseLayout>
