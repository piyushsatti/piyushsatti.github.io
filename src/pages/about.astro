---
import BaseLayout from "../layouts/BaseLayout.astro";
import TechStack from "../components/TechStack.astro";
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";
---

<BaseLayout title="About Me">
  <div class="index-content framed">
    <h1>About Me</h1>
    <p>
      I'm a backend-leaning developer with an M.Sc. I care about typed schemas,
      clean boundaries, and tests that read like specs.
    </p>
    <p>
      <a
        href="https://github.com/piyushsatti"
        target="_blank"
        rel="noopener noreferrer">GitHub</a
      > ::
      <a
        href="https://www.linkedin.com/in/piyush-satti/"
        target="_blank"
        rel="noopener noreferrer">LinkedIn</a
      > ::
      <a
        href="https://scholar.google.ca/citations?user=eR10c10AAAAJ&hl=en"
        target="_blank"
        rel="noopener noreferrer">Scholar</a
      >
    </p>
  </div>

  <figure>
    <img
      src={`${base}og-images/background.gif`}
      alt="Terminal Pi(Ï€) Animation"
      loading="lazy"
    />
    <figcaption>
      Fueled by: diet coke, whiteclaw, and ramen.
    </figcaption>
  </figure>

  <TechStack
    idPrefix="about"
    title="Technical Skills"
    subtitle="Filter by language, stack, and focus area."
  />
</BaseLayout>
