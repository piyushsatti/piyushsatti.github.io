---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostGridSection from "../components/cards/PostGridSection.astro";
import type { CardEntry } from "../components/PostCard.astro";
import { getCollection } from "astro:content";
import { toSitePath } from "../lib/site";

// Blog posts (theme expects 'blog' collection)
const postsCollection = await getCollection("blog");
const featuredPostSlugs = ["rest-vs-graphql-hands-on-learning", "craft-heroes"];
const featuredPosts: CardEntry[] = featuredPostSlugs
  .map((slug) => postsCollection.find((entry) => entry.slug === slug))
  .filter((entry): entry is NonNullable<typeof entry> => entry !== undefined)
  .map((entry) => ({ slug: entry.slug, data: entry.data }));

// Projects (custom collection)
const featuredProjects: CardEntry[] = (await getCollection("projects"))
  .slice(0, 2)
  .map((entry) => ({ slug: entry.slug, data: entry.data }));
---

<BaseLayout title="Home" description="Welcome to my personal website">
  <section class="hero">
    <div class="left">
      <div class="index-content framed">
        <h1 id="hello-there">Piyush Satti</h1>
        <p>
          I am a Software Developer with a strong foundation in computer
          science, hands-on freelance experience, and published research in
          algorithm development. <br />
          Graduated with <b
            >M.Sc. in Applied Computer Science at Concordia University
            (Montreal,Canada)</b
          >. I bring a trifecta: academic rigor, engineering experience, and
          entrepreneurial mindset.
        </p>

        <p class="hero__links">
          <a href={toSitePath("about")}>About Me</a> ::
          <a href={toSitePath("blog")}>Blog</a> ::
          <a
            href={toSitePath("resume.pdf")}
            target="_blank"
            rel="noopener noreferrer"
            >Resume</a
          >
        </p>
      </div>
    </div>

    <div class="right">
      <figure class="hero__photo">
        <img
          src={toSitePath("og-images/me.jpeg")}
          alt="Portrait of Piyush Satti"
          width="220"
          height="220"
          loading="lazy"
        />
      </figure>
    </div>
  </section>

  <PostGridSection
    title="Featured Projects"
    variant="projects"
    entries={featuredProjects}
    emptyState="Projects coming soon."
  />

  <PostGridSection
    title="Latest Posts"
    variant="blog"
    entries={featuredPosts}
    emptyState="No recent posts yet."
  />
</BaseLayout>
