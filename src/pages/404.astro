---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_BASE } from "../lib/site";

const missingBackButtonLabel = "Back to home page";
---

<BaseLayout title="404 - Page Not Found">
  <div class="page page--narrow">
    <h1>404 — Page not found...</h1>
    <p>
      The page you're looking for doesn't exist. It might have been moved,
      deleted, or you may have entered the wrong URL.
    </p>
    <div>
      <a href={SITE_BASE} class="button inline">
        <span class="button__text">{missingBackButtonLabel} →</span>
      </a>
    </div>
  </div>
</BaseLayout>
